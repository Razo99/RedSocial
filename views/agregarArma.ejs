<%include _header%>
<h1>Registro de armas</h1>

<form action="/agregarArma" method="post">
<div class="form-group">
    <input name="descripcion" type="text" class="form-control"
    placeholder="descripcion" required autofocus>
</div>
<div class="form-group">
    <input name="categoria" type="text" class="form-control" placeholder="Categoria" required autofocus>
</div>
<div class="form-group"> 
    <input name="fuerza" type="number" class="form-control" placeholder="123465789" required autofocus>
</div>
<div class="form-group">
    <input name="municiones" type="boolean" class="form-control" placeholder="true or false" required autofocus>
</div>

<br>
<input type="submit" value="Registrar nueva arma" class="btn btn-primary btn-block">
</form>
<%include _footer%>